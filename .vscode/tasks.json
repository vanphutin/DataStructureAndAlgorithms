{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Active C++ File",
      "type": "shell",
      "command": "g++", // Đổi từ gcc thành g++
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task to build the active C++ file"
    }
  ]
}
