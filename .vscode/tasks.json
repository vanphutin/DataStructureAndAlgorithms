{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Active C++ File",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/exe/${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Task to build the active C++ file"
    }
  ]
}
